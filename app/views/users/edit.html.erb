<div class="container">
  <div class="row">
    <div class="col-7 mx-auto my-2">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="Name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"Name", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%=f.file_field :profile_image, accept: "image/*",id:"inputImage",class:"form-control-file" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
        <%=f.text_area :introduction, id:"inputIntroduction",class:"form-control" %>
      </div>
      <div class="form-group">
         <%=f.submit "Update User", class: "btn btn-secondary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
