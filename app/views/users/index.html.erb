<div class="container">
  <div class="row">
    <%=render 'books/book' %>
    <div class="col-8">
      <h1>Users</h1>
        <table class="table">
          <thread>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="1"></th>

            </tr>
          </thread>

          <tbody>
            <%= @users.each do |user| %>
              <tr>
                <td><% if  user.profile_image.atached?%>
                      <%= image_tag user.get_profile_image(100,100) %>
                    <% else %>
                      <%= image_tag 'noImage',size: "100x100" %>
                    <% end %></td>
                <td><%= user.name %></td>
                <td><%=link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tabel>
        </tbody>
    </div>
  </div>
</div>