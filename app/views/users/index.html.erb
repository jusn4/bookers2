<div class="container my-2">
  <div class="row">
    <%=render 'books/book' %>
    <div class="offset-md-1 col-md-8">
      <h1>Users</h1>
        <table class="table">
          <thread>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="1"></th>

            </tr>
          </thread>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><% if  user.profile_image.attached?%>
                      <%= image_tag user.profile_image,size: "100x100" %>
                    <% else %>
                      <%= image_tag 'noImage',size: "100x100" %>
                    <% end %></td>
                <td><%= user.name %></td>
                <td><%=link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>