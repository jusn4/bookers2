<div class="container my-2">
  <div class="row">
     <div class="col-md-3">
        <h1>User info</h1>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image,size: "100x100" %>
        <% else %>
          <%= image_tag 'noImage',size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th <%= @user.introduction %>></th>
            </tr>
          </tbody>
        </table>
        <%=link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>

        <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, id:"inputTitle", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Oinion</label>
          <%= f.text_area :body, id:"inputOpinion", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><a href="/users/<%= book.user.id %>">
                      <% if  book.user.profile_image.attached? %>
                        <%= image_tag book.user.profile_image,size: "100x100" %>
                      <% else %>
                        <%= image_tag 'noImage',size: "100x100" %>
                      <% end %>
                    </a>
                </td>
                <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>