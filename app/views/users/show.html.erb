<div class="container">
  <div class="row">
    <%=render 'books/book' %>
    <div class="col-8">
      <h1>Books</h1>
        <table class="table">
          <thread>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thread>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><% if  book.user.profile_image.attached? %>
                      <%= image_tag book.user.profile_image,size: "100x100" %>
                    <% else %>
                      <%= image_tag 'noImage',size: "100x100" %>
                    <% end %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>