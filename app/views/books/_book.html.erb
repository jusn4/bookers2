      <div class="col-md-3">
        <h2>User info</h2>
        <% if current_user.profile_image.attached? %>
          <%= image_tag current_user.profile_image,size: "100x100" %>
        <% else %>
          <%= image_tag 'noImage',size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th> <%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%=link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>

        <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, id:"inputTitle", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_area :body, id:"inputOpinion", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>