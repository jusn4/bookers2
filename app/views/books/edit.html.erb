  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-mid-7 mx-auto my-2">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="Title">Title</label>
        <%= f.text_field :title,id:"Title",class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="Body">Opinion</label>
        <%= f.text_area :body ,id:"Body", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update Book', class:"btn btn-success" %>
      </div>
      <a href="/books/<%=@book.id %>">Show</a>
      |
      <a href="/books">Back</a>
      <% end %>
    </div>
  </div>
</div>
