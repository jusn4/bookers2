<h1>User info</h1>
<% if current_user.profile_image.attached? %>
    <%= image_tag current_user.profile_image,size: "100x100" %>
<% else %>
    <%= image_tag 'noImage',size: "100x100" %>
<% end %>
<p>name  <%= current_user.name %></p>
<p>introduction <%= current_user.introduction %></p>
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>