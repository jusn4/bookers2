<div class="container my-5">
  <div class="row">
    <%= render 'book' %>
      <div class="offset-md-1 col-md-8">
        <h1>Books</h1>
        <table class="table">
          <thread>
              <tr>
                 <th colspan="1"></th>
                 <th>Title</th>
                 <th>Opinion</th>
              </tr>
          </thread>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><% if  book.user.profile_image.attached?%>
                      <%= image_tag book.user.profile_image, size:"100x100" %>
                    <% else %>
                      <%= image_tag 'noImage',size: "100x100" %>
                    <% end %></td>
                <td><%=link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %></td>
                <td><%= book.body %></td>
              </tr>
             <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

