<div class="container">
  <div class="row">
      <div class="col-4">
        <h1>User info</h1>
        <% if current_user.profile_image.attached? %>
          <%= image_tag current_user.profile_image,size: "100x100" %>
        <% else %>
          <%= image_tag 'noImage',size: "100x100" %>
        <% end %>
        <p>name  <%= current_user.name %></p>
        <p>introduction <%= current_user.introduction %></p>
        <h1>New book</h1>
        <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>

      <div class="col-8">
        <h1>Books</h1>
        <table class="table">
          <thread>
              <tr>
                 <th colspan="1"></th>
                 <th>Title</th>
                 <th>Opinion</th>
              </tr>
          </thread>

          <tbody>
            <%= @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
             <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

