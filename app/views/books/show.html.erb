<div class="container my-5">
  <div class="row">
    <%=render 'book' %>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td><a href="users/<%=@book.user.id %>">
                    <% if @book.user.profile_image.attached? %>
                      <%= image_tag @book.user.profile_image,size:"100x100" %>
                    <% else %>
                      <%= image_tag 'noImage',size:"100x100" %>
                    <% end %>
                    <br><%=@book.user.name %></a>
            </td>
            <td><a href="/books/<%=@book.id %>"><%= @book.title %></a></td>
            <td><%= @book.body %></td>
            <% if  @book.user == current_user %>
              <td><%= link_to "Edit" , edit_book_path(@book),class:'btn btn-success' %>
              </td>
              <td>  <%= link_to "Destroy", book_path(@book), method: :delete,class: 'btn btn-danger' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>